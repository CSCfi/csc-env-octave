Bootstrap: docker
From: ghcr.io/gnu-octave/octave:10.3.0

# Install additional dependencies for packages.
# https://gnu-octave.github.io/packages/

%post
    apt-get --yes update && \
    DEBIAN_FRONTEND="noninteractive" \
    apt-get --no-install-recommends --yes install \
      libnetcdf-dev \
      libnetcdff-dev \
      liblapack-dev
